function stormperson_validate($node, &$form) {
  if (!empty($node->user_name)) {
    $username = $node->user_name;
    $ass_user = user_load_by_name($username);
    if (!empty($ass_user)) {
      $query = db_select('node', 'n');

      $query->fields('n', array('nid', 'title'))
            ->condition('stp.user_uid', $ass_user->uid)
            ->join('stormperson', 'stp', 'n.nid = stp.nid');

      $row = $query->execute()->fetchAssoc();
        if ($row && (empty($form['#node']->user_name) || ($form['#node']->user_name != $node->user_name))) {
          $message = t('This Drupal user is already assigned to a Storm person (!link). The same Drupal user can not be assigned to two Storm people.', array('!link' => l($row['title'], 'node/'. $row['nid'])));
        form_set_error('user_name', $message);
      }
    }
  }
}

function stormperson_user_autocomplete($string = '') {
  $matches = array();
  if ($string) {
    $query = db_select('users', 'u')
      ->fields('u', array('name', 'uid'))
      ->condition('name', db_like($string) . '%', 'LIKE');

    $subquery = db_select('stormperson', 'stp');
    $subquery->addField('stp', 'user_uid', 'uid');

    $query->condition('uid', $subquery, 'NOT IN');
    $result = $query->execute();

    foreach($result as $row) {
      $matches[$row->name] = check_plain($row->name);
    }
    drupal_json_output($matches);
  }
}

function stormperson_insert($node) {
  _stormperson_beforesave($node);

  db_insert('stormperson')
    ->fields(array(
      'vid' => $node->vid,
      'nid' => $node->nid,
      'organization_nid' => $node->organization_nid,
      'organization_title' => $node->organization_title,
      'prefix' => $node->prefix,
      'email' => $node->email,
      'www' => $node->www,
      'phone' => $node->phone,
      'im' => $node->im,
      'user_uid' => $node->user_uid,
    ))
    ->execute();

  _stormperson_aftersave($node);
}

function stormperson_update($node) {
  // if this is a new node or we're adding a new revision,
  if ($node->revision) {
    stormperson_insert($node);
  }
  else {
    _stormperson_beforesave($node);

    db_update('stormperson')
      ->fields(array(
        'organization_nid' => $node->organization_nid,
        'organization_title' => $node->organization_title,
        'prefix' => $node->prefix,
        'email' => $node->email,
        'www' => $node->www,
        'phone' => $node->phone,
        'im' => $node->im,
        'user_uid' => $node->user_uid,
      ))
      ->condition('vid', $node->vid)
      ->execute();

    _stormperson_aftersave($node);

    if ($node->title != $node->title_old) {
      module_invoke_all('stormperson_change', $node->nid, $node->title);
    }
  }
}

function _stormperson_beforesave(&$node) {
  $username = $node->user_name;
  $ass_user = user_load_by_name($username);
  $node->user_uid = $ass_user->uid;
  if (!$node->email) {
    $node->email = $ass_user->mail;
  }

  $query = db_select('node', 'n');
  $query->join('stormorganization', 'sor', 'sor.vid = n.vid');
  $result = $query
    ->fields('n', array('title'))
    ->condition('n.type', 'stormorganization')
    ->condition('n.nid', $node->organization_nid)
    ->execute();

  $record = $result->fetchAssoc();

  $node->organization_title = $record['title'];
}

function _stormperson_aftersave(&$node) {
  global $user;
  if ($user->uid == $node->user_uid) {
    $user->stormperson_nid = $node->nid;
    $user->stormorganization_nid = $node->organization_nid;
  }
}

function stormperson_node_revision_delete($node) {
  // Notice that we're matching a single revision based on the node's vid.
  db_delete('stormperson')
    ->condition('vid', $node->vid)
    ->execute();
}

function stormperson_delete($node) {
  // Notice that we're matching all revision, by using the node's nid.
  db_delete('stormperson')
    ->condition('nid', $node->nid)
    ->execute();

  global $user;
  if ($user->uid == $node->user_uid) {
    $user->stormperson_nid = -1;
    $user->stormorganization_nid = -1;
  }
}

function stormperson_load($nodes) {
  foreach ($nodes as $nid => &$node) {
    $result = db_select('stormperson', 'spe')
      ->fields('spe')
      ->condition('spe.vid', $node->vid)
      ->execute();
    $record = $result->fetchAssoc();

    foreach ($record as $key => $value) {
      $node->$key = $value;
    }

    $ass_user = user_load($node->user_uid);
    $node->user_name = $ass_user->name;
    $node->title_old = $node->title;
  }
}

