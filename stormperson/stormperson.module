    ->fields('n', array('nid', 'title'))
    ->condition('n.status', 1)
    ->condition('n.type', 'stormorganization')
    ->orderBy('n.title', 'ASC')
    ->execute();

//  $s = stormorganization_access_sql($s);
//  $s = db_rewrite_sql($s);
  $organizations = array();
